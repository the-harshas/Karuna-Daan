<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.DonationDetailActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donated Item Details"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:fontFamily="@font/imprima"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                android:layout_margin="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1A656262"
                    android:paddingBottom="15dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/profileImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/profile_image"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/donarUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="User Name"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="@id/profileImage"
                        app:layout_constraintStart_toEndOf="@id/profileImage"
                        app:layout_constraintBottom_toTopOf="@id/userLocation"/>
                    <TextView
                        android:id="@+id/userLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phagwara, Punjab"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/donarUserName"
                        app:layout_constraintStart_toEndOf="@id/profileImage"
                        app:layout_constraintBottom_toBottomOf="@id/profileImage"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/previewCardView"
                        android:layout_width="216dp"
                        android:layout_height="152dp"
                        app:cardCornerRadius="32dp"
                        android:elevation="12dp"
                        android:layout_marginTop="70dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <ImageView
                            android:id="@+id/previewImageOfItem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/upload_image"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/itemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/previewCardView">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:textSize="15sp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:text="Item Name"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/donationItemName"
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:text="Item Name"
                            android:textSize="15sp"
                            android:layout_marginTop="15dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:gravity="center"
                            android:textColor="#9F3559"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/selectItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/itemName"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:text="Category"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/category"
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:text="Category"
                            android:textSize="15sp"
                            android:layout_marginTop="15dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:gravity="center"
                            android:textColor="#9F3559"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayoutLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/selectItem">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:textSize="15sp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:text="Address"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/itemLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:text="Address Not available"
                            android:textSize="15sp"
                            android:layout_marginTop="15dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:gravity="center"
                            android:textColor="#9F3559"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mobileNumberLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayoutLocation">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:text="Mobile Number"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/mobileNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:text=" Mobile Number "
                            android:textSize="15sp"
                            android:layout_marginTop="15dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#9F3559"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/decription"
                        android:text="Desciption :--"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mobileNumberLayout"/>
                    <LinearLayout
                        android:id="@+id/itemsDescriptionLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/decription">
                        <TextView
                            android:id="@+id/itemDescription"
                            android:layout_width="318dp"
                            android:layout_height="47dp"
                            android:hint="Please add description "
                            android:textSize="15sp"
                            android:minWidth="300dp"
                            android:layout_marginTop="15dp"
                            android:paddingTop="8dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:background="@drawable/edit_text_donate_background"/>
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/chatToDonater"
                android:layout_width="118dp"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/donate_background"
                android:text="Chat"
                android:textColor="@color/white"
                android:elevation="40dp"/>
        </LinearLayout>
</ScrollView>