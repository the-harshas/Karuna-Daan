<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.LoginActivity"
    android:background="#F3EFE9">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:paddingBottom="5dp">
        <ProgressBar
            android:id="@+id/loginProgessBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/topLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="200dp"
            android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="141dp"
            android:layout_height="141dp"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/hopehub" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/imprima"
            android:text="Welcome to Hope Hub"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/imprima"
            android:text="Yours small step can bring a big change"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_border"
        android:elevation="20dp"
        app:cardElevation="7dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLogo">

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="305dp"
            android:layout_height="39dp"
            android:background="@drawable/login_edit_text_background"
            android:hint="Email "
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="273dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_border"
        android:elevation="20dp"
        app:cardElevation="7dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewEmail">

        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="305dp"
            android:layout_height="39dp"
            android:background="@drawable/login_edit_text_background"
            android:hint="Enter name"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="273dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_border"
        android:elevation="20dp"
        app:cardElevation="7dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewUsername">

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="305dp"
            android:layout_height="39dp"
            android:background="@drawable/login_edit_text_background"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="273dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_border"
        android:elevation="20dp"
        app:cardElevation="7dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewPassword">

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="305dp"
            android:layout_height="39dp"
            android:background="@drawable/login_edit_text_background"
            android:hint="Confirm Password"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="273dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/catergoryOfUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_border"
        android:elevation="20dp"
        app:cardElevation="7dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewConfirmPassword">

        <RadioGroup
            android:id="@+id/radioGroupUserType"
            android:layout_width="305dp"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/radioNgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NGO"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radioDonor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donor"
                android:layout_weight="1"/>
        </RadioGroup>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/forgetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catergoryOfUser">
        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/changeToSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User?"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_marginRight="25dp"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardsignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_border"
        app:cardElevation="7dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgetLayout">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Login"
            android:background="@drawable/sign_in_button_background"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>